inline-header {
#include <sawIntuitiveResearchKit/generation_t.h>
}

class {
    name arm_configuration_t;
    namespace dvrk;
    attribute CISST_EXPORT;

    member {
        name _generation;
        type dvrk::generation_t;
        visibility private;
        default GENERATION_UNDEFINED;
        accessors none;
    }

    member {
        name kinematic;
        type std::string;
        visibility public;
    }

    member {
        name mounting_pitch;
        type double;
        visibility public;
        default 0.0;
    }

    inline-header {

    public:

        inline void set_generation(const dvrk::generation_t generation) {
            m_generation = generation;
        }

        inline dvrk::generation_t generation(void) const {
            if (m_generation == dvrk::GENERATION_UNDEFINED) {
                CMN_LOG_INIT_ERROR << "dvrk::arm_configuration_t: trying to access generation before it is set"
                                   << std::endl;
                exit(EXIT_FAILURE);
            }
            return m_generation;
        }
    }
}
