inline-header {
#include <cisstVector/vctTransformationTypes.h>
}

class {
    name base_frame;
    namespace dvrk;
    attribute CISST_EXPORT;

    // fixed transformation with reference_frame name
    member {
        name reference_frame;
        type std::string;
        visibility public;
        default "";
    }

    member {
        name transform;
        type vctFrm4x4;
        visibility public;
        default vctFrm4x4::Identity();
    }

    // or get it dynamically from a component/interface

    member {
        name component;
        type std::string;
        visibility public;
        default "";
    }

    member {
        name interface;
        type std::string;
        visibility public;
        default "";
    }

    inline-header {

        inline bool valid(void) const {
            return (// fixed frame
                    ((reference_frame != "") && (transform != vctFrm4x4::Identity())
                     && (interface == "") && (component == ""))
                    // component
                    || ((reference_frame == "") && (transform == vctFrm4x4::Identity())
                        && (interface != "") && (component != ""))
                    // undefined
                    || ((reference_frame == "") && (transform == vctFrm4x4::Identity())
                        && (interface == "") && (component == ""))
                    );
        }
    }
}
