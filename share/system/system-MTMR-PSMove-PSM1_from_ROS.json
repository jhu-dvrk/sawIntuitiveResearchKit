{
    "$id": "dvrk-system.schema.json",
    "$version": "1",
    "component_manager": {
        "components":
        [
            {
                "shared-library": "sawPSMove",
                "class-name": "mtsPSMove",
                "constructor-arg": {
                    "Name": "PSMove",
                    "Period": 0.03
                },
                "configure-parameter": ""
            }
            ,
            // this is to use the dvrk_arm_from_ros class
            {
                "shared-library": "dvrk_arm_from_ros",
                "class-name": "dvrk_psm_from_ros",
                "constructor-arg": {
                    "Name": "PSM1",
                    "Period": 0.01
                }
            }
        ]
    }
    ,
    "arms":
    [
    {
            "name": "MTMR",  // created previously using custom components
            "type": "MTM_GENERIC",
            "component": "PSMove",
            "interface": "controller"
        }
        ,
    {
            "name": "PSM1",  // created previously using custom components
            "type": "PSM_GENERIC",
            "component": "PSM1",
            "interface": "PSM1",
            "skip_ROS_bridge": true // this is to make sure we don't republish on the same topics as the remote PSM
        }
    ]
    ,
    "consoles":
    [
        {
            "name": "console",
            "input_type": "COMPONENTS",
            "operator_present" :
            {
                "component": "PSMove",
                "interface": "controller/move"
            }
            ,
            "clutch" :
            {
                "component": "PSMove",
                "interface": "controller/circle"
            }
            ,
            "camera" :
            {
                "component": "PSMove",
                "interface": "controller/cross"
            }
            ,
            "teleop_PSMs":
            [
                {
                    "MTM": "MTMR",
                    "PSM": "PSM1",
                    "configure_parameter": {
                        "start_gripper_threshold": 0.0, // to start automatically when operator is present
                        "align_MTM": false,
                        "MTM_is_haptic": false,
                        "ignore_jaw": true,
                        "use_MTM_velocity": false
                    }
                }
            ]
        }
    ]
}
