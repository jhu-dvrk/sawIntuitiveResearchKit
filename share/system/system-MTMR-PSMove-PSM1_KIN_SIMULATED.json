{
    "$id": "dvrk-system.schema.json",
    "$version": "1",
    "component_manager": {
        "components":
        [
            {
                "shared-library": "sawPSMove",
                "class-name": "mtsPSMove",
                "constructor-arg": {
                    "Name": "PSMove",
                    "Period": 0.03
                },
                "configure-parameter": "sawPSMove-camera-MTMs.json"
            }
        ]
    }
    ,
    "arms":
    [
        {
            "name": "MTMR",  // created previously using custom components
            "type": "MTM_GENERIC",
            "component": "PSMove",
            "interface": "MTMR"
        }
        ,
        {
            "name": "PSM1",
            "type": "PSM",
            "simulation": "KINEMATIC",
            "arm_file": "arm/PSM_KIN_SIMULATED_LARGE_NEEDLE_DRIVER_400006.json"
         }
    ]
    ,
    "consoles":
    [
        {
            "name": "console",
            "input_type": "COMPONENTS",
            "operator_present" :
            {
                "component": "PSMove",
                "interface": "MTMR/move"
            }
            ,
            "clutch" :
            {
                "component": "PSMove",
                "interface": "MTMR/circle"
            }
            ,
            "camera" :
            {
                "component": "PSMove",
                "interface": "MTMR/cross"
            }
            ,
            "teleop_PSMs":
            [
                {
                    "MTM": "MTMR",
                    "PSM": "PSM1",
                    "configure_parameter": {
                        "start_gripper_threshold": 0.0, // to start automatically when operator is present
                        "align_MTM": false,
                        "MTM_is_haptic": false,
                        "ignore_jaw": false,
                        "use_MTM_velocity": false
                    }
                }
            ]
        }
    ]
}
